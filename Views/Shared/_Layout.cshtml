<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ecommercedotnet</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ecommercedotnet.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="urunlerDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Ürünler</a>
                        <div class="dropdown-menu" aria-labelledby="urunlerDropdown">
                            <a class="dropdown-item" href="../productScreen/urunlerkupe.html">Küpe</a>
                            <a class="dropdown-item" href="../productScreen/urunlerkolye.html">Kolye</a>
                            <a class="dropdown-item" href="../productScreen/urunleryuzuk.html">Yüzük</a>
                            <a class="dropdown-item" href="../productScreen/urunlercharm.html">Charm</a>
                            <a class="dropdown-item" href="../productScreen/urunlerbileklik.html">Bileklik</a>
                        </div>


                </ul>
                <button onclick="window.location.href='../giftScreen/hediye.html'">Hediyeler</button>
                <button onclick="window.location.href='../latestScreen/yenigelenler.html'">Yeni Gelenler</button>

                <span class="navbar-text"><a href="../homeScreen/index.html">PLUVIA</a></span>

                <ul class="navbar-nav ml-auto search-container">
                    <li class="nav-item">
                        <form class="form-inline my-2 my-lg-0">
                            <div class="search-container">
                                <input class="form-control mr-sm-2" type="search" placeholder="Ara" aria-label="Search">
                                <button class="btn" type="submit"><i class="fas fa-search"></i></button>
                            </div>
                        </form>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="fas fa-heart"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="../buyScreen/sepet.html"><i class="fas fa-shopping-cart"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" data-toggle="modal" data-target="#loginModal"><i class="fas fa-user"></i></a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ecommercedotnet - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
