<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pluvia</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.2/umd/popper.min.js" integrity="sha512-2rNj2KJ+D8s1ceNasTIex6z4HWyOnEYLVC3FigGOmyQCZc2eBXKgOxQmo3oKLHyfcj53uz4QMsRCWNbLd32Q1g==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Karla:wght@400;700&family=Cormorant+Garamond:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://kit.fontawesome.com/a076d05399.css">

    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <link rel="stylesheet" href="/css/style.css">
    <style>
        .modal-content {
            border-radius: 15px;
            padding: 20px;
        }

        .modal-header, .modal-footer {
            border: none;
        }

        .modal-title {
            font-family: 'Cormorant Garamond', serif;
            font-size: 1.5rem;
            font-weight: 700;
        }

        .modal-body {
            font-family: 'Karla', sans-serif;
            width: 100%;
        }

            .modal-body .form-control {
                font-family: 'Karla', sans-serif;
            }

        .btn-custom {
            background-color: #000;
            color: #fff;
        }

            .btn-custom:hover {
                background-color: #333;
            }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="urunlerDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Ürünler</a>
                        <div class="dropdown-menu" aria-labelledby="urunlerDropdown">
                            <a class="dropdown-item" href="../productScreen/urunlerkupe.html">Küpe</a>
                            <a class="dropdown-item" href="../productScreen/urunlerkolye.html">Kolye</a>
                            <a class="dropdown-item" href="../productScreen/urunleryuzuk.html">Yüzük</a>
                            <a class="dropdown-item" href="../productScreen/urunlercharm.html">Charm</a>
                            <a class="dropdown-item" href="../productScreen/urunlerbileklik.html">Bileklik</a>
                        </div>

                   
                </ul>
                <button onclick="window.location.href='../giftScreen/hediye.html'">Hediyeler</button>
                <button onclick="window.location.href='../latestScreen/yenigelenler.html'">Yeni Gelenler</button>

                <span class="navbar-text"><a href="../homeScreen/index.html">PLUVIA</a></span>

                <ul class="navbar-nav ml-auto search-container">
                    <li class="nav-item">
                        <form class="form-inline my-2 my-lg-0">
                            <div class="search-container">
                                <input class="form-control mr-sm-2" type="search" placeholder="Ara" aria-label="Search">
                                <button class="btn" type="submit"><i class="fas fa-search"></i></button>
                            </div>
                        </form>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#"><i class="fas fa-heart"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="../buyScreen/sepet.html"><i class="fas fa-shopping-cart"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" data-toggle="modal" data-target="#loginModal"><i class="fas fa-user"></i></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Login/Logout"><i class="fas fa-shopping-cart"></i></a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
            @await Html.PartialAsync("LoginPartial")
            @await Html.PartialAsync("SignUpPartial")

          
        </main>
    </div>
    
    <footer>
        <div class="container-fluid policies-container bg-light py-5">
            <div class="row justify-content-around">
                <div class="col-md-2 text-center">
                    <h5>Politikalar</h5>
                    <ul class="list-unstyled">
                        <li><a href="../infoScreen/sss.html">SSS</a></li>
                        <li><a href="../infoScreen/satis-sozlesmesi.html">Satış Sözleşmesi</a></li>
                        <li><a href="#">İade ve Değişim</a></li>
                    </ul>
                </div>
                <div class="col-md-2 text-center">
                    <h5>Diğer</h5>
                    <ul class="list-unstyled">
                        <li><a href="../aboutUsScreen/hakkimizda.html">Hakkımızda</a></li>
                    </ul>
                    <!-- İletişim bağlantısını burada bırakıyoruz -->
                    <ul class="list-unstyled">
                        <li><a href="../contactUsScreen/iletisim.html">İletişim</a></li>
                    </ul>
                </div>
                <div class="col-md-4 text-center">
                    <h5>Abone Olun</h5>
                    <p>Bir adım önde olabilirsin. Ürünlerimiz ile ilgili güncellemelerimizi duymak için kaydolun.</p>
                    <form>
                        <div class="form-group">
                            <input type="email" class="form-control" id="email" placeholder="Email adresi">
                        </div>
                        <button type="submit" class="btn custom-btn-hero">Kaydol</button>
                    </form>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
