            }

        .btn-custom {
            background-color: #000;
            color: #fff;
        }

            .btn-custom:hover {
                background-color: #333;
            }

        button {
            font-family: 'Cormorant Garamond', serif;
            border: none;
            padding: 10px 20px;
            background-color: transparent; /* Arka plan rengi, isteğe bağlı olarak değiştirilebilir */
            cursor: pointer;
        }

            button:hover {
                background-color: transparent; /* Butonun üzerine gelindiğinde arka plan rengi değişimi, isteğe bağlı */
            }

        body {
            font-family: 'Karla', sans-serif;
        }

        .section-title {
            font-family: 'Cormorant Garamond', serif;
            margin-bottom: 20px;
        }

        .price {
            font-family: 'Karla', sans-serif;
        }

        .product-container {
            display: flex;
            justify-content: center;
            margin-bottom: 20px;
        }

        .product {
            text-align: center;
            margin: 10px;
        }

            .product img {
                max-width: 100%;
                width: 150px;
                height: auto;
            }

        .hero-container img {
            width: 100%;
            max-width: 1200px; /* Bu satırı ekleyerek maksimum genişliği sınırlayabilirsiniz */
            margin: 0 auto; /* Ortalamak için */
        }

        .row {
            display: flex;
            justify-content: center;
        }

        a {
            color: black;
            text-decoration: none;
        }

            a:hover {
                color: grey;
                text-decoration: underline;
            }

