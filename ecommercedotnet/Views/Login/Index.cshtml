@{
	ViewData["Title"] = "Index";
}

<h1>Login</h1>


<form method="post">
	<div class="form-group">
		<label for="loginEmail">E-posta adresi</label>
		<input type="email" class="form-control" id="loginEmail" name="loginEmail" placeholder="E-posta adresi">
	</div>
	<div class="form-group">
		<label for="loginPassword">Şifre</label>
		<input type="password" class="form-control" id="loginPassword" name="loginPassword" placeholder="Şifre">
	</div>
	<button type="submit" class="btn btn-custom">Giriş Yap</button>
</form>
